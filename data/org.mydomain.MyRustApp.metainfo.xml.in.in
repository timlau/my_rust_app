<component type="desktop-application">
  <id>@app-id@</id>
  <metadata_license>CC0</metadata_license>
  <!-- Insert your license of choice here -->
  <!-- <project_license>MIT</project_license> -->
  <name>My Rust App</name>
  <summary>A Simple Rust Gui Application using Gtk4, Libadwaita, Relm4 </summary>
  <description>
    <p>A boilerplate template for GTK4 + Rust + Relm4 . It uses Meson as a build system and has
      flatpak support by default.</p>
  </description>
  <screenshots>
    <screenshot type="default">
      <image>
        https://github.com/timlau/my_rust_app/blob/main/data/resources/screenshots/screenshot1.png?raw=true</image>
      <caption>Main window</caption>
    </screenshot>
  </screenshots>
  <url type="homepage">https://github.com/timlau/my_rust_app</url>
  <url type="bugtracker">https://github.com/timlau/my_rust_app/issues</url>
  <!-- Source code repository -->
  <url type="vcs-browser">https://github.com/timlau/my_rust_app</url>
  <!-- Translation repository -->
  <url type="translate">https://github.com/timlau/my_rust_app</url>
  <!-- Open Age Ratings Service:
       https://hughsie.github.io/oars/generate.html
  -->
  <content_rating type="oars-1.1" />
  <categories>
    <category>Development</category>
  </categories>
  <releases>
    <release version="0.1.0" date="2019-07-11" />
  </releases>
  <developer id="rasmil.dk">
    <name translate="no">Tim Lauridsen</name>
  </developer>
  <!--
    Branding colors:
    https://docs.flathub.org/docs/for-app-authors/metainfo-guidelines/#brand-color
  -->
  <branding>
    <color type="primary" scheme_preference="light">#ff00ff</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>
  <update_contact>tla@rasmil.dk</update_contact>
  <translation type="gettext">@gettext-package@</translation>
  <launchable type="desktop-id">@app-id@.desktop</launchable>
</component>
